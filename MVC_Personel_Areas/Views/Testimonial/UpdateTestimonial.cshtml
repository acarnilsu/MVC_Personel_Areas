@model MVC_Personel_Areas.Models.TblTestimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Referans Güncelleme</h2>

<form method="post">
    <label>ID</label>
    @Html.TextBoxFor(x => x.TestimonialID, new { @class = "form-control", @readonly = "" })
    <br />
    <label>Name</label>
    @Html.TextBoxFor(x => x.TestimonialName, new { @class = "form-control" })
    <br />
    <label>Resim</label>
    @Html.TextBoxFor(x => x.TestimonialImage, new { @class = "form-control" })
    <br />

    <label>Başlık</label>
    @Html.TextBoxFor(x => x.TestimonialTitle, new { @class = "form-control" })
    <br />

    <label>Tanımlama</label>
    @Html.TextBoxFor(x => x.TestimonialDescription, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Güncelle</button>
</form>

