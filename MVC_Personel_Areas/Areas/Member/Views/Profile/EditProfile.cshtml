@model MVC_Personel_Areas.Models.TblMember
@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<h2>Bilgi Güncelleme Sayfası</h2>

<form method="post">
    <label>ID</label>
    @Html.TextBoxFor(x => x.MemberID, new { @class = "form-control ",@readonly="" })
    <br />
    <label>Ad</label>
    @Html.TextBoxFor(x => x.MemberName, new { @class="form-control"})
    <br />
    <label>Soyad</label>
    @Html.TextBoxFor(x => x.MemberSurname, new { @class = "form-control" })
    <br />
    <label>Şifre</label>
    @Html.TextBoxFor(x => x.MemberPassword, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Güncelle</button>
</form>